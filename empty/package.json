{
  "name": "empty-package-template",
  "description": "your next npm package",
  "version": "0.1.0",
  "private": true,
  "index": "build/lib/index",
  "bin": {
    "example-bin": "bin/example-bin"
  },
  "files": [
    "bin",
    "build",
    "!build/__test__/"
  ],
  "scripts": {
    "build": "rm -rvf build && tsc",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src",
    "format": "dprint fmt",
    "start": "node build/bin/example-bin",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --watch --noEmit"
  },
  "devDependencies": {
    "@eslint/js": "catalog:dev-deps",
    "@tsconfig/strictest": "catalog:dev-deps",
    "@types/jest": "catalog:dev-deps",
    "@types/node": "catalog:dev-deps",
    "dprint": "catalog:dev-deps",
    "eslint": "catalog:dev-deps",
    "tslib": "catalog:dev-deps",
    "eslint-plugin-import-x": "catalog:dev-deps",
    "jest": "catalog:dev-deps",
    "@swc-node/jest": "catalog:dev-deps",
    "tsx": "catalog:dev-deps",
    "typescript": "catalog:dev-deps",
    "typescript-eslint": "catalog:dev-deps"
  },
  "engines": {
    "node": ">=18"
  }
}
