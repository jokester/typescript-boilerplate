{
  "name": "hono-worker-template",
  "description": "your next hono-worker package",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "wrangler deploy --dry-run --outdir=build",
    "deploy": "wrangler publish",
    "dev": "wrangler dev --local --live-reload ./src/server.ts",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src",
    "format": "dprint fmt",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --watch --noEmit"
  },
  "dependencies": {
    "@hono/node-server": "^1.12.2",
    "debug": "^4.3.3",
    "hono": "^4.5.10"
  },
  "devDependencies": {
    "@eslint-react/eslint-plugin": "^1.5.11",
    "@eslint/js": "^9.2.0",
    "@tsconfig/strictest": "^2.0.5",
    "@types/jest": "<30",
    "dprint": "^0.45.1",
    "eslint": "^8.57.0",
    "eslint-plugin-import-x": "^0.5.1",
    "jest": "<30",
    "ts-jest": "<30",
    "ts-node": "<11",
    "tsx": "^4.19.0",
    "typescript": "^5.4",
    "typescript-eslint": "^7.9.0",
    "wrangler": "^3.73.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}