{
  "name": "hono-template",
  "description": "your next hono package",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "cf:build": "wrangler deploy --dry-run --outdir=build",
    "cf:deploy": "wrangler publish",
    "cf:dev": "wrangler dev --local --live-reload ./src/app.ts",
    "build": "echo noop",
    "dev": "DEBUG=* tsx -- ./src/node-server.ts",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src",
    "format": "dprint fmt",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --watch --noEmit"
  },
  "dependencies": {
    "@hono/node-server": "catalog:deps-hono",
    "debug": "catalog:deps",
    "dotenv": "catalog:deps",
    "hono": "catalog:deps-hono"
  },
  "devDependencies": {
    "@eslint-react/eslint-plugin": "catalog:dev-deps",
    "@eslint/js": "catalog:dev-deps",
    "@tsconfig/strictest": "catalog:dev-deps",
    "@types/debug": "catalog:dev-deps",
    "@types/jest": "catalog:dev-deps",
    "dprint": "catalog:dev-deps",
    "eslint": "catalog:dev-deps",
    "eslint-plugin-import-x": "catalog:dev-deps",
    "jest": "catalog:dev-deps",
    "@swc-node/jest": "catalog:dev-deps",
    "tsx": "catalog:dev-deps",
    "typescript": "catalog:dev-deps",
    "typescript-eslint": "catalog:dev-deps",
    "wrangler": "catalog:dev-deps"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
