{
  "extends": ["@tsconfig/strictest", "./tsconfig.base.json"],
  "compilerOptions": {
    "isolatedModules": true,
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "target": "esnext",
    "skipLibCheck": true,
    "lib": ["dom", "esnext"],
    "incremental": true,
    "plugins": [{ "name": "next" }],
    "strictNullChecks": true
  },
  "exclude": ["node_modules", "scripts", "coverage", "build", "__test__", "bin", "./*.json", "./*.js"],
  "include": ["apps", "pages", "src", "server", "shared", ".next/types/**/*.ts"]
}
