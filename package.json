{
  "name": "typescript-boilerplate",
  "version": "0.1.0",
  "description": "A starting point for node.js & TypeScript application",
  "main": "index.js",
  "scripts": {
    "start": "node lib/index.js",
    "start:ts": "ts-node lib-ts/index.ts",
    "build": "rm -rf lib/* && tsc",
    "watch": "rm -rf lib/* && tsc --watch",
    "test:ts": "    mocha --opts mocha-ts.opts || true",
    "test": "tsc && mocha --opts mocha-js.opts || true",
    "tslint": "tslint -c tslint.json ts-lib/**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jokester/typescript-boilerplate.git"
  },
  "keywords": [
    "nodejs",
    "webpack",
    "TypeScript",
    "boilerplate"
  ],
  "author": "Wang Guan <momocraft@gmail.com>",
  "license": "MIT",
  "private": true,
  "bugs": {
    "url": "https://github.com/jokester/typescript-boilerplate/issues"
  },
  "engines": {
    "node": ">= 4.0.0"
  },
  "homepage": "https://github.com/jokester/typescript-boilerplate#readme",
  "dependencies": {
    "tslib": "^1.5.0"
  },
  "devDependencies": {
    "@types/chai": "^3.4.34",
    "@types/node": "^6.0.60",
    "chai": "^3.5.0",
    "mocha": "^3.2.0",
    "mocha-typescript": "^1.0.15",
    "ts-node": "^2.0.0",
    "tslint": "^4.4.2",
    "typescript": "^2.1.5"
  }
}
