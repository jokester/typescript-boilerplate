{
    "__comment": {
        "readme": "this file is used for node.js-targeted compile",
        "##module": "compile to commons module, for old node versions without ES6 `import` support"
    },
    "compilerOptions": {
        "target": "es6",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "experimentalDecorators": true,
        "outDir": "lib",
        "rootDir": "lib-ts",
        "sourceMap": false,
        "listEmittedFiles": false,
        "emitDecoratorMetadata": true,
        "pretty": true,
        "module": "commonjs",
        "importHelpers": true
    },
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    }
}
