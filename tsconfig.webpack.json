{
    "__comment": {
        "readme": "this file is used for node.js-targeted compile",
        "##module": "default to ES6 module, which is supported by webpack"
    },
    "compilerOptions": {
        "target": "es6",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "experimentalDecorators": true,
        "sourceMap": false,
        "listEmittedFiles": false,
        "emitDecoratorMetadata": true,
        "pretty": true,
        "importHelpers": true
    },
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    }
}
